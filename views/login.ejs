<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!--Bootstrap css-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--bootstrap icones-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
    <!--css personalizado-->
    <link rel="stylesheet" href="css/estilos.css">
    <link rel="shortcut icon" href="images/favicon.png" type="image/x-icon">
</head>
<body>
    <div class="container">
        <a href="/"><img src="images/produtos.png" alt="Produtos" class="imglogo"></a>
        <h1 class="text-center">Lista de Produtos</h1>
        <h3 class="text-center">Login</h3>
        <div class="row">
            <div class="col text-center">
                <form action="" method="post" class="form-control">
                    <input type="email" name="email" id="" class="form-control" placeholder="Email">
                    <div class="input-group">
                    <input type="password" name="senha" id="senha" class="form-control" placeholder="Senha"><i class="bi bi-eye-slash btn btn-dark" id="troca"></i></div>
                    <input type="submit" value="Entrar" class="btn btn-outline-success">
                </form>
                <h5 class="text-center">Caso você ainda não tem uma conta clique <a href="/registro">aqui</a></h5>
            </div>
        </div>
    </div>
    <script>
        var trocaTipo = document.querySelector('#troca')
        var senha = document.querySelector("#senha")
        trocaTipo.addEventListener('click',()=>{
            var tipo = senha.getAttribute("type") === "password" ? "text" : "password"
            senha.setAttribute("type",tipo)
            trocaTipo.classList.toggle("bi-eye")
        })
    </script>
</body>
</html>